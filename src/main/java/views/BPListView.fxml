<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.BPListController">
   <top>
      <ToolBar BorderPane.alignment="CENTER">
        <items>
          <Button id="cloneOnlist" fx:id="clone" mnemonicParsing="false" onAction="#onClickClone" text="Clone" />
            <Button id="copyOnlist" fx:id="copy" mnemonicParsing="false" onAction="#onClickCopy" text="Copy" />
            <Button id="subOnlist" fx:id="subscribe" mnemonicParsing="false" onAction="#onClickSub" text="Subscribe" />
        </items>
      </ToolBar>
   </top>
   <center>
      <ListView id="MainBPList" fx:id="BPListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
